@{
    ViewData["Title"] = "Home Page";
}

<div id="Order">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btnModal" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Add Order
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Order Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="customername" class="form-label">Customer</label>
                                <select class="form-select" name="customername" id="customername">

                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="orderno" class="form-label">Order No</label>
                                <input type="text" class="form-control" id="orderno">
                            </div>
                        </div><div class="col-lg-6">
                            <div class="mb-3">
                                <label for="orderdate" class="form-label">Order Date</label>
                                <input type="date" class="form-control" id="orderdate">
                            </div>
                        </div><div class="col-lg-6">
                            <div class="mb-3">
                                <label for="ordertotal" class="form-label">Order Total</label>
                                <input type="text" disabled class="form-control" id="ordertotal">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <button class="btn btn-primary btn-sm mb-3 btnAddMore">Add more</button>
                        </div>                      
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-order-item">
                                <thead>
                                    <tr>
                                        <th scope="col">Product Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Qty</th>
                                        @* <th scope="col">Total</th> *@
                                        <th scope="col">GST</th>
                                        <th scope="col">Line Total</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                    <tr class="divRow d-none">
                                        <td>
                                            <select class="form-select productname">
                                            </select>
                                        </td>
                                        <td>
                                            <input type="text" class="form-control orderprice" disabled value="0">
                                        </td>
                                        <td>
                                            <input type="number" class="form-control orderqty" value="1">
                                        </td>
                                        @*  <td>
                                            <input type="number" disabled class="form-control total" value="0">
                                        </td> *@
                                        <td>
                                            <input type="number" class="form-control gst" value="5">
                                        </td>
                                        <td>
                                            <input type="number" disabled class="form-control linetotal">
                                        </td>
                                        <td class="tdAction">
                                            <button class="btn btn-danger btn-sm btnRemove">Remove</button>
                                        </td>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary btnSaveOrder">Save</button>
                </div>
            </div>
        </div>
    </div>

    <table class="table  table-order-details">
        <thead>
            <tr>
                <th scope="col">Customer Name</th>
                <th scope="col">Order No</th>
                <th scope="col">Order Date</th>
                <th scope="col">Order Price</th>
                <th scope="col">Action</th>
            </tr>
            
            <tr class="divRow d-none">
                <td class="tdCustomerName"></td>
                <td class="tdOrderNo"></td>
                <td class="tdOrderDate"></td>
                <td class="tdOrderPrice"></td>
                <td class="tdAction">
                    <button class="btn btn-primary btn-sm btnEdit me-2">Edit</button>
                    <button class="btn btn-danger btn-sm btnDelete">Delete</button>
                </td>
            </tr>
        </thead>
        <tbody>
                  
        </tbody>
    </table>
</div>